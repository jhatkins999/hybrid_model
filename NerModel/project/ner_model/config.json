{
  "dataset_reader": {
    "type": "rcc-ner",
    "tag_label": "ner",
    "coding_scheme": "BIOUL",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": false
      },
      "token_characters": {
        "type": "characters",
        "character_tokenizer": {
          "end_tokens": ["@@PADDING@@", "@@PADDING@@"]
        }
      }
    },
    "percent_negatives": 30,
    "cutoff_sentence_length": 40
  },
  "validation_dataset_reader": {
    "type": "conll2003",
    "tag_label": "ner",
    "coding_scheme": "BIOUL",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": false
      },
      "token_characters": {
        "type": "characters",
        "character_tokenizer": {
          "end_tokens": ["@@PADDING@@", "@@PADDING@@"]
        }
      }
    }
  },
  "train_data_path": "data.new/train_concat.conll",
  "validation_data_path": "data.new/dev_concat.conll",
  "test_data_path": "data.new/test_concat.conll",
  "evaluate_on_test" : true,
  "model": {
    "type": "crf_tagger",
    "label_encoding": "BIOUL",
    "constrain_crf_decoding": true,
    "calculate_span_f1": true,
    "dropout": 0.5,
    "include_start_end_transitions": false,
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50,
            "pretrained_file": "data/glove/glove.6b.50d.txt",
            "trainable": true
        },
        "token_characters": {
            "type": "character_encoding",
            "embedding": {
                "embedding_dim": 16
            },
            "encoder": {
                "type": "cnn",
                "embedding_dim": 16,
                "num_filters": 128,
                "ngram_filter_sizes": [3],
                "conv_layer_activation": "relu"
            }
          }
       }
    },
    "encoder": {
        "type": "lstm",
        "input_size": 178,
        "hidden_size": 200,
        "num_layers": 2,
        "dropout": 0.5,
        "bidirectional": true
    },
    "initializer":{
      "regexes": [
        [
          ".*tag_projection_layer.*weight",
          "xavier_uniform"
        ],
        [
          ".*tag_projection_layer.*bias",
          "zero"
        ],
        [
          ".*feedforward.*weight",
          "xavier_uniform"
        ],
        [
          ".*feedforward.*bias",
          "zero"
        ],
        [
          ".*weight_ih.*",
          "xavier_uniform"
        ],
        [
          ".*weight_hh.*",
          "orthogonal"
        ],
        [
          ".*bias_ih.*",
          "zero"
        ],
        [
          ".*bias_hh.*",
          "lstm_hidden_bias"
        ]
      ]
    }
  },
  "data_loader": {
    "batch_size": 32
  },
  "trainer": {
    "optimizer": {
        "type": "adam",
        "lr": 0.01
    },
    "validation_metric": "+f1-measure-overall",
    "num_epochs": 10,
    "grad_norm": 5.0,
    "patience": 25,
    "cuda_device": -1
  }
}